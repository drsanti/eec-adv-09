{
  "name": "ecc-game-engine",
  "version": "1.0.2",
  "description": "ecc-game-engine by ecc-lab",
  "main": "libs/ECC-CGP-Engine.js",
  "scripts": {
    "webpack": "webpack --watch --mode development --inline --colors --progress --display-error-details --display-cached",
    "start": "webpack-dev-server --inline --colors --open",
    "build": "webpack --mode production --inline --colors --progress --display-error-details --display-cached",
    "rollup": "rollup -c",
    "terser": "terser   src/libs/EngineCore.all.js -o apps/src/libs/EngineCore.js -c",
    "uglify": "uglifyjs src/libs/EngineCore.all.js -o apps/src/libs/EngineCore.js -c --source-map",
    "publish-terser": "npm run rollup && npm run terser &&  cp -rf src/libs/ECC-CGP-Engine.js apps/src/libs/ECC-CGP-Engine.js",
    "publish-uglify": "npm run rollup && npm run uglify &&  cp -rf src/libs/ECC-CGP-Engine.js apps/src/libs/ECC-CGP-Engine.js",
    "rollup-ui": "rollup --config rollup.config.ui.js",
    "uglify-ui": "uglifyjs src/libs/ui/WebGuiCore.all.js -o apps/src/libs/ui/WebGuiCore.js -c --source-map",
    "publish-ui": "npm run rollup-ui && npm run uglify-ui && grunt cssmin && cp -rf src/libs/ECC-Web-Gui.js apps/src/libs/ECC-Web-Gui.js",
    "gen-doc": "jsdoc -c jsdoc.json",
    "deploy": "npm run publish-uglify && npm run publish-ui",
    "io": "cd apps && node ioserver.js"
  },
  "keywords": [
    "3D",
    "Game",
    "Graphics",
    "Physics"
  ],
  "author": "Dr.Santi Nuratch",
  "license": "ISC",
  "dependencies": {
    "cannon": "0.6.2",
    "image-to-heightmap": "1.0.0",
    "socket.io-client": "2.2.0",
    "three": "0.99.0",
    "three-css2drender": "1.0.0",
    "three-gltf-loader": "1.108.0",
    "three-subdivision-modifier": "1.0.5",
    "three.equirectangular-to-cubemap": "1.1.0",
    "threejs-orbit-controls": "1.0.3",
    "websocket": "1.0.30"
  },
  "devDependencies": {
    "@babel/core": "7.6.0",
    "@babel/preset-env": "7.6.0",
    "babel-loader": "8.0.6",
    "css-loader": "2.1.1",
    "grunt": "1.5.2",
    "grunt-babel": "8.0.0",
    "grunt-contrib-cssmin": "3.0.0",
    "grunt-contrib-jshint": "2.1.0",
    "grunt-contrib-nodeunit": "2.0.0",
    "grunt-contrib-sass": "1.0.0",
    "grunt-contrib-uglify": "4.0.1",
    "grunt-contrib-watch": "1.1.0",
    "load-grunt-tasks": "4.0.0",
    "minami": "1.2.3",
    "rollup": "1.21.4",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-node-resolve": "4.2.4",
    "style-loader": "0.23.1",
    "terser": "3.17.0",
    "tui-jsdoc-template": "1.2.2",
    "uglify-es": "3.3.9",
    "webpack": "4.40.2",
    "webpack-cli": "3.3.9",
    "webpack-dev-server": "3.11.0"
  }
}
